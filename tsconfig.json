{
    "compilerOptions": {
        "target": "esnext",
        "module": "nodenext",
        "moduleResolution": "nodenext",

        "baseUrl": ".",

        "declaration": true,
        "strictNullChecks": true,
        "resolveJsonModule": true,
        "emitDeclarationOnly": true,
        "allowImportingTsExtensions": true,
        "allowSyntheticDefaultImports": true
    }
}
